#!/bin/bash

VALGRIND_VERSION="3.3.0"

if [ `uname` != "Linux" ]; then
    echo "Sorry, valgrind only works on Linux at the moment"
    exit 1
fi

cd src/

./configure --prefix=$SAGE_LOCAL

if [ $? -ne 0 ]; then
    echo "error configuring valgrind $VALGRIND_VERSION"
    exit 1
fi

make

if [ $? -ne 0 ]; then
    echo "error installing valgrind $VALGRIND_VERSION"
    exit 1
fi

make install

if [ $? -ne 0 ]; then
    echo "error installing valgrind $VALGRIND_VERSION"
    exit 1
fi

