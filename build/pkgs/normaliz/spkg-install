#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage -sh'?"
    exit 1
fi

export CXXFLAGS="-I$SAGE_LOCAL/include $CXXFLAGS"

cd src/source
$MAKE

if [ $? -ne 0 ]; then
    echo >&2 "Error building Normaliz."
    exit 1
fi

cp -pf normaliz "$SAGE_LOCAL/bin/"

if [ $? -ne 0 ]; then
    echo >&2 "Error installing Normaliz."
    exit 1
fi

