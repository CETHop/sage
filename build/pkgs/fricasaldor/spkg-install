#!/bin/sh

check_error() {
    if [ $? -ne 0 ]; then
	echo "***********************************************************"
        echo $1
	echo "***********************************************************"
        exit 1
    fi
}
# out-of-source build
FRICAS_CLISP=ecl
mkdir build-dir
cd build-dir
../src/configure --prefix=$SAGE_LOCAL --with-lisp="$FRICAS_CLISP"
check_error "Failed to configure Axiom."
make
check_error "Failed to make Axiom."
# also install asq
#cp target/*/bin/asq $SAGE_LOCAL/bin && make install
make install
check_error "Failed to install Axiom."
