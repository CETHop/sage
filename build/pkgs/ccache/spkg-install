#!/usr/bin/env bash

die () {
  echo >&2 "$@"
  exit 1
}

[ -n "$SAGE_LOCAL" ] || die "SAGE_LOCAL undefined, maybe run \`sage -sh\`?"

cd src
export LDFLAGS="-L$SAGE_LOCAL/lib $LDFLAGS"
export CPPFLAGS="-I$SAGE_LOCAL/include $LDFLAGS"
./configure --prefix="$SAGE_LOCAL" ||
  die "configuring ccache failed"

$MAKE ||
  die "building ccache failed"

$MAKE install ||
  die "installing ccache failed"

mkdir -p "$SAGE_LOCAL/libexec/ccache"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/cc"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/c++"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/gcc"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/g++"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/clang"
ln -s ../../bin/ccache "$SAGE_LOCAL/libexec/ccache/clang++"

# respect the user's settings if they have them
if [[ "$CCACHE_DIR" == "$DOT_SAGE/ccache" ]]; then
    # we need to increase the max size of ccache
    # to be able to cache the sage distribution
    hash -r
    ccache --max-size=4G
fi
